{
  "manifest_version": 3,
  "name": "Bubble Text Copy",
  "description": "Creates bubble «Copy» button near to selected text",
  "version": "3.2.23",
  "icons": {
      "16":"icons/16.png",
      "32":"icons/32.png",
      "48":"icons/48.png",
      "128":"icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["clipboardWrite"]
}